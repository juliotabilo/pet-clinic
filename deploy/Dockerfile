# CONTENEDOR DOCKER A TOMAR DE EJEMPLO
FROM openjdk:11-jre
# PUERTO QUE ESCUCHA EN LA APLICACIÓN
EXPOSE 8085

# COPIAR ALGO EN LA MAQUINA HOST
ADD spring-petclinic-2.6.0.jar /app/spring-petclinic-2.6.0.jar
# Corresponde a cd.. (WORKDIR EN DOCKER)
WORKDIR /app
# INSTRUCCIÓN DE FINALIZACIÓN (SE EJECUTA CUANDO NUESTRA IMAGEN ESTE CONSTRUIDA)
CMD java -jar spring-petclinic-2.6.0.jar
